<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@android:color/holo_blue_bright"
        app:civ_border_width="2dp"
        android:src="@drawable/photorace"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civProfileImage"
        android:layout_centerHorizontal="true"
        android:text="Elsa"
        android:textSize="18sp"
        android:fontFamily="sans-serif-regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civProfileImage"
        android:layout_toRightOf="@id/tvTitle"
        android:layout_toEndOf="@id/tvTitle"
        android:layout_marginLeft="4dp"
        android:padding="2dp"
        android:text="VIP"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/vip_shape"/>

    <include
        layout="@layout/expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ivEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_mail_outline_white_36dp"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_settings_white_36dp"
        android:scaleType="centerInside"/>
</RelativeLayout>